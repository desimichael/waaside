{{ 'Collection1.css' | asset_url | stylesheet_tag }}

<div class="collection collection1">
  <div class="container">
    <div class="row">
      {%- for block in section.blocks -%}
      <div class="{{ section.settings.xxl_col }} {{ section.settings.xl_col }} {{ section.settings.lg_col }} {{ section.settings.md_col }} {{ section.settings.sm_col }}">
        <div class="collection1__product-item">
          {% assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.00 %}
          {% assign overlay_opacity_2 = section.settings.overlay_opacity_2 | divided_by: 100.00 %}
          <div class="collection1__product-image collection1__product-image--{{ section.settings.image_fit }}"
          style="background-color: {{ section.settings.background | color_modify: 'alpha', overlay_opacity }}">
            {% if block.settings.collection.image != blank %}
              <a href="{{ block.settings.collection.url }}" class="collection1__image-link collection1__image-link--{{ section.settings.bg_shape }}"
              style="background-color: {{ section.settings.background_2 | color_modify: 'alpha', overlay_opacity_2 }}">
                {%- liquid 
                assign image_height = block.settings.collection.image.width | divided_by: block.settings.collection.image.aspect_ratio
                  if block.settings.collection.image != blank
                    assign image_class = 'collection1__product-img'
                  endif
                  if block.settings.collection.image != blank
                    assign sizes = '(min-width: 750px) 50vw, 100vw'
                  elsif block.settings.collection.image != blank
                    assign sizes = '50vw'
                  else
                    assign sizes = '100vw'
                  endif
                -%}
                {{
                  block.settings.collection.image
                  | image_url: width: 3840
                  | image_tag:
                    loading: 'lazy',
                    width: block.settings.collection.image.width,
                    height: image_height,
                    class: image_class,
                    sizes: sizes,
                    widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                }}
              </a>
            {%- elsif block.settings.collection.image == blank -%}
              <div class="collection1__image-link">
                {{ 'collection-4' | placeholder_svg_tag: "collection1__product-img" }}
              </div>
            {%- endif -%}
          </div>
          <div class="collection1__product-info">
            <div class="collection1__product-details collection1__product-details--aligned-{{ section.settings.info_alignment }}">
              {%- if section.settings.show_title == true -%}
                <div class="collection1__product-title">
                  {{ block.settings.collection.title }}
                </div>
              {%- endif -%}
              {%- if section.settings.show_price == true -%}
                <div class="collection1__product-price">
                  {{ block.settings.collection.price | money }}
                </div>
              {%- endif -%}
              {% if section.settings.show_colors == true %}
                <ul class="collection1__colors">
                  <li
                    class="collection1__color collection1__color--red">
                  </li>
                  <li
                    class="collection1__color collection1__color--green">
                  </li>
                  <li
                    class="collection1__color collection1__color--blue">
                  </li>
                </ul>     
              {% endif %}
            </div>
          </div>
        </div>
      </div>   
      {% endfor %}
    </div>
  </div>
</div>



