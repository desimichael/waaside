{{ 'AnnounceBar.css' | asset_url | stylesheet_tag }}

{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="announce-bar" style="background: {{ block.settings.background }}"
      role="region"
      aria-label="{{ 'sections.header.announcement' | t }}"
      {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="announce-bar__link">
          {% endif %}
            <span class="announce-bar__text" style="color: {{ block.settings.body_text }}">
              {{ block.settings.text | escape }}
            </span> 
            </a>
        {% endif %}
      </div>
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "class": "announcement-bar-section",
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "50% OFF SALE!",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "color_background",
          "id": "background",
          "label": "Background",
          "default": "linear-gradient(298deg, rgba(18, 18, 18, 1) 3%, rgba(0, 0, 0, 1) 92%)"
        },
        {
          "type": "color",
          "id": "body_text",
          "label": "Body text",
          "default": "#f8f8ff"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}