{% case section.settings.header_type %}
{% when 'header1' %}
<!-- Header 1 Start -->
<header class="header header1">
  <!-- header 1 logo start -->
  <div class="header1__logo">
    {%- if section.settings.menu != blank -%}
    <a class="header1__logo-link" href="{{ routes.root_url }}">
      {%- if section.settings.logo != blank -%}
      {%- assign logo_alt = section.settings.logo.alt | default: shop.name |
      escape -%}
      {%- assign logo_height = section.settings.logo_width | divided_by:
      section.settings.logo.aspect_ratio -%}
      {{
                section.settings.logo
                | image_url: width: 500
                | image_tag:
                  class: 'header1__logo-link',
                  widths: '50, 100, 150, 200, 250, 300, 400, 500',
                  height: logo_height,
                  width: section.settings.logo_width,
                  alt: logo_alt
              }}
      {%- else -%}
      {{ shop.name }}
      {%- endif -%}
    </a>
    {% endif %}
  </div>
  <!-- header 1 logo end -->

  <!-- header 1 middle nav start -->
  <ul class="header1__collections-nav">
    {%- if section.settings.menu != blank -%}
    {% for link in section.settings.menu.links %}
    {%- if link.links == blank -%}
    <li class="header1__collection-link">
      <a href="{{ link.url }}" class="header1__link">
        {{- link.title | escape -}}
      </a>
    </li>
    {% else %}
    <li class="header1__collection-link header1__collection-link--dropdown">
      <a href="{{ link.url }}" class="header1__link">
        {{- link.title | escape -}}
        <i class="fa-solid fa-chevron-down"></i>
      </a>
      <ul class="collection-sublinks">
        {% for childlink in link.links %}
        <li>
          <a href="{{ childlink.url }}">
            {{- childlink.title | escape -}}
          </a>
        </li>
        {% endfor %}
      </ul>
    </li>
    {% endif %}
    {% endfor %}
    {% endif %}
  </ul>
  <!-- header 1 middle nav end -->

  <!-- header 1 right nav start -->
  <ul class="header1__collections-nav header1__collections-nav--right">
    <li class="header1__user-link">
      <a href="#" class="header1__user-link-icon">
        <i class="fa-solid fa-magnifying-glass"></i>
      </a>
    </li>
    <li class="header1__user-link">
      {%- if shop.customer_accounts_enabled -%}
      <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
        class="header1__user-link-icon">
        <i class="fa-solid fa-user"></i>
      </a>
      {% endif %}
    </li>
    <li class="header1__user-link">
      <a href="{{ routes.cart_url }}" class="header1__user-link-icon">
        <i class="fa-solid fa-basket-shopping"></i>
      </a>
    </li>
  </ul>
  <!-- header 1 right nav end -->

  <!-- header 1 mobile start -->
  <div class="header1__mobile-menu">
    <a class="header1__mobile-logo" href="{{ routes.root_url }}">
      {%- if section.settings.logo != blank -%}
      {%- assign logo_alt = section.settings.logo.alt | default: shop.name |
      escape -%}
      {%- assign logo_height = section.settings.logo_width | divided_by:
      section.settings.logo.aspect_ratio -%}
      {{
              section.settings.logo
              | image_url: width: 500
              | image_tag:
                class: 'header1__logo-link',
                widths: '50, 100, 150, 200, 250, 300, 400, 500',
                height: logo_height,
                width: section.settings.logo_width,
                alt: logo_alt
            }}
      {%- else -%}
      {{ shop.name }}
      {%- endif -%}
    </a>
    <div class="header1__mobile-open"><i class="fa-solid fa-bars"></i></div>
    <div class="header1__mobile-nav-left">
      <ul class="header1__mobile-nav-content">
        <li class="header1__mobile-nav-header">
          <div class="header3__mobile-close">
            <i class="fa-solid fa-xmark"></i>
          </div>
        </li>
        <li class="header1__mobile-link"><a href="#">accessories</a></li>
        <li class="header1__mobile-link"><a href="#">collections</a></li>
        <div class="header1__mobile-user-group">
          <div class="header1__mobile-user-link">
            <a href="#" class="header1__mobile-user-link-icon"><i
                class="fa-solid fa-lock"></i><span>sign in</span></a>
          </div>
          <div class="header1__mobile-user-link">
            <a href="#" class="header1__mobile-user-link-icon">
              <i class="fa-solid fa-user"></i>
              <span>register</span>
            </a>
          </div>
          <div class="header1__mobile-user-link">
            <a href="#" class="header1__mobile-user-link-icon"><i
                class="fa-solid fa-basket-shopping"></i><span>cart</span></a>
          </div>
        </div>
