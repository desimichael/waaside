{% if section.settings.collection.all_products_count %}
  <div class="collection collection2">
  <div class="container">
    <div class="row">
      {% for product in section.settings.collection.products limit: section.settings.total_products %}
      <div class="{{ section.settings.xxl_col }} {{ section.settings.xl_col }} {{ section.settings.lg_col }} {{ section.settings.md_col }} {{ section.settings.sm_col }}">
        <div class="collection2__product-item">
          {% assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.00 %}
          <div class="collection2__product-image collection2__product-image--{{ section.settings.image_fit }}">
            <div class="collection2__like"><i
                class="far fa-heart"></i></div>
            <div class="collection2__new-item"><span
                class="collection2__new-item-text">new</span>
            </div>
            {% if product.images[0] != blank %}
              <a href="{{ product.url }}" class="collection2__product-image-link"  style="background-color: {{ section.settings.background | color_modify: 'alpha', overlay_opacity }}">
                {%- liquid 
                assign image_height = product.images[0].width | divided_by: product.images[0].aspect_ratio
                  if product.images[0] != blank
                    assign image_class = 'collection2__product-front-image'
                  endif
                  if product.images[0] != blank
                    assign sizes = '(min-width: 750px) 50vw, 100vw'
                  elsif product.images[0] != blank
                    assign sizes = '50vw'
                  else
                    assign sizes = '100vw'
                  endif
                -%}
                {{
                  product.images[0]
                  | image_url: width: 3840
                  | image_tag:
                    loading: 'lazy',
                    width: product.images[0].width,
                    height: image_height,
                    class: image_class,
                    sizes: sizes,
                    widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                }}

                {%- liquid 
                assign image_height = product.images[1].width | divided_by: product.images[1].aspect_ratio
                  if product.images[1] != blank
                    assign image_class = 'collection2__product-back-image'
                  endif
                  if product.images[1] != blank
                    assign sizes = '(min-width: 750px) 50vw, 100vw'
                  elsif product.images[1] != blank
                    assign sizes = '50vw'
                  else
                    assign sizes = '100vw'
                  endif
                -%}
                {{
                  product.images[1]
                  | image_url: width: 3840
                  | image_tag:
                    loading: 'lazy',
                    width: product.images[1].width,
                    height: image_height,
                    class: image_class,
                    sizes: sizes,
                    widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                }}
              </a>
            {%- endif -%}
          </div>
          <div class="collection2__product-info">
            <div class="collection2__product-details">
              {% if section.settings.show_title == true %}
                <div class="collection2__product-title">
                  {{ product.title }}
                </div> 
              {% endif %}
              {% if section.settings.show_price == true %}
                <div class="collection2__product-price">
                    {{ product.price | money }}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% else %}
<div class="collection collection2">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-6">
        <div class="collection2__product-item">
          <div class="collection2__product-image">
            <div class="collection2__like"><i
                class="far fa-heart"></i></div>
            <div class="collection2__new-item"><span
                class="collection2__new-item-text">new</span>
            </div>
            <div class="collection2__product-image-link">
              {{ 'collection-1' | placeholder_svg_tag: "collection2__product-front-image" }}
              {{ 'collection-2' | placeholder_svg_tag: "collection2__product-back-image" }}
            </div>
            </div>
          </div>
          <div class="collection2__product-info">
            <div
              class="collection2__product-details">
              <div
                class="collection2__product-title">
                New Arrivals</div>
              <div
                class="collection2__product-price">
                $50.00</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}




{% schema %}
{
  "name": "Collection Prod 2 Img",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection Products 2 Img"
    },
    {
      "type": "select",
      "id": "image_fit",
      "options": [
        {
          "value": "cover",
          "label": "Image cover"
        },
        {
          "value": "contain",
          "label": "Image contain"
        }
      ],
      "default": "contain",
      "label": "Product image fit"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Product BG color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Prod BG color opacity",
      "default": 100
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Product Title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Product Price",
      "default": true
    },
    {
      "type": "select",
      "id": "info_alignment",
      "options": [
        {
          "value": "left",
          "label": "Align left"
        },
        {
          "value": "center",
          "label": "Align center"
        }
      ],
      "default": "left",
      "label": "Info text alignment"
    },
    {
      "type": "select",
      "id": "xxl_col",
      "options": [
        {
          "value": "col-xxl-6",
          "label": "2 Columns"
        },
        {
          "value": "col-xxl-4",
          "label": "3 Columns"
        },
        {
          "value": "col-xxl-3",
          "label": "4 Columns"
        },
        {
          "value": "col-xxl-2",
          "label": "6 Columns"
        }
      ],
      "default": "col-xxl-2",
      "label": "2 XL devices"
    },
    {
      "type": "select",
      "id": "xl_col",
      "options": [
        {
          "value": "col-xl-6",
          "label": "2 Columns"
        },
        {
          "value": "col-xl-4",
          "label": "3 Columns"
        },
        {
          "value": "col-xl-3",
          "label": "4 Columns"
        }
      ],
      "default": "col-xl-3",
      "label": "Extra large devices"
    },
    {
      "type": "select",
      "id": "lg_col",
      "options": [
        {
          "value": "col-lg-6",
          "label": "2 Columns"
        },
        {
          "value": "col-lg-4",
          "label": "3 Columns"
        },
        {
          "value": "col-lg-3",
          "label": "4 Columns"
        }
      ],
      "default": "col-lg-3",
      "label": "Large devices"
    },
    {
      "type": "select",
      "id": "md_col",
      "options": [
        {
          "value": "col-md-6",
          "label": "2 Columns"
        },
        {
          "value": "col-md-4",
          "label": "3 Columns"
        },
        {
          "value": "col-md-3",
          "label": "4 Columns"
        },
        {
          "value": "col-md-2",
          "label": "6 Columns"
        }
      ],
      "default": "col-md-4",
      "label": "Medium devices"
    },
    {
      "type": "select",
      "id": "sm_col",
      "options": [
        {
          "value": "col-sm-6",
          "label": "2 Columns"
        },
        {
          "value": "col-sm-12",
          "label": "1 Columns"
        }
      ],
      "default": "col-sm-6",
      "label": "Small devices"
    },
    {
      "type": "range",
      "id": "total_products",
      "min": 1,
      "max": 20,
      "step": 1,
      "label": "Total products to show",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Collection Prod 2 Img"
    }
  ]
}
{% endschema %}
